<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp" >

    <EditText
        android:id="@+id/etCommands"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:hint="Enter your description here!\n\nRemember!\nMake it as clear as possible!"
        android:layout_gravity="center" 
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/tvSupporting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Upload your links to your supporting documents:"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100" >

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:src="@drawable/dropboxlogo"
            android:layout_weight="25"
            />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/googledriveicon"
            android:layout_weight="25"/>

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/boxicon"
            android:layout_weight="25"
            />


        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/onedrivelogo"
            android:layout_weight="25"
            />

    </LinearLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Next!" 
        android:textSize="13dp"
        />

</LinearLayout>