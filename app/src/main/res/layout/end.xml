<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="@android:color/holo_blue_light"
    >

    <TextView
        android:id="@+id/tvHeaderEnd"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="One Last Step..."
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textSize="34sp" />



    <TextView
        android:id="@+id/tvText2End"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="We'll contact you shortly regarding your quotation."
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tvText3End"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textColor="@android:color/white"
        android:text="and..."
        android:textAlignment="center"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tvText4End"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="CONGRATULATIONS!"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textSize="34sp" />


    <TextView
        android:id="@+id/tvText2End"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Your dream is now being turned into a reality!"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <Button
        android:id="@+id/bStartNewEnd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:text="Start another Revelation!"
        android:background="@android:color/white"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/bReturnEnd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="Return to Main Menu"
        android:background="@android:color/white"
        android:textSize="14sp"/>

</LinearLayout>
